<Alloy>	
	<Window id="login" class="background">
		<View layout="vertical">
			<Label id="title" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">Sky'd</Label>
			
			<View class="container" top="20%">				
				<Label  class="label" width="90sp">Username:</Label>
				<TextField id="username" class="textField"/>
			</View>
			
			<View class="container">				
				<Label class="label" width="90sp">Password:</Label>	
				<TextField id="password" class="textField" />
			</View>
			
			<View class="container">
				<Button id="loginButton" class="button" onClick="loginButton"/>
				<Button id="signupButton" class="button" onClick="signup"/>
			</View>
			
			<View class="container" top="0">
				<Label class="label">Forgot </Label>
				<Label class="forgotLabel" onClick="forgotUser"> Username</Label>
				<Label class="label" left="5">or</Label>
				<Label class="forgotLabel" onClick="forgotPass">Password?</Label>
			</View>
		</View>
	</Window>
</Alloy>