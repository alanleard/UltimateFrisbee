<Alloy>
	<Window id="createUser" class="background">
			<View layout="vertical">
				<Label id="title">Create Your Sky'd Profile</Label>
				
				<View class="container" top="7%">
					<Label class="label">Username:</Label>
					<TextField id="userName" class="textField" />
				</View>
				
				<View class="container">
					<Label class="label">First Name:</Label>
					<TextField id="firstName" class="textField" />
				</View>
				
				<View class="container">
					<Label class="label">Last Name:</Label>
					<TextField id="lastName" class="textField" />					
				</View>
				
				<View class="container" horizontalWrap="false">
					<Label class="label">Email:</Label>
					<TextField id="email" class="textField" />
				</View>
				
				<View class="container">
					<Label class="label">Password: </Label>
					<TextField id="password" class="textField" passwordMask="true" />
				</View>
				
				<View class="container">
					<Label class="label">Confirm: </Label>
					<TextArea id="confirm" class="textField" passwordMask="true" />
				</View>
				
				<View class="container" left="40sp" right="40sp">
					<Label class="termsFont">By clicking the button below,</Label>
					<Label class="termsFont"> you agree to Sky'd's</Label>
					<Label class="link" right="3sp" onClick="termsPage">Terms of Service</Label>
					<Label class="termsFont">and</Label>
					<Label class="link" onClick="privacyPage">Privacy Page.</Label>
				</View>
				
				<View class="container">
					<Button id="signUp" class="button" onClick="createUser">
					<Button id="cancel" class="button" onClick="cancelButton">
				</View>
			</View>
	</Window>
</Alloy>