<Alloy>
	<Window id="createUser" class="background">
			<View layout="vertical">
				<Label id="title">Create Your Sky'd Profile</Label>
			
				<View class="container">
					<Label class="label">First Name:</Label>
					<TextArea id="firstName" class="textArea" />
				</View>
				
				<View class="container">
					<Label class="label">Last Name:</Label>
					<TextArea id="lastName" class="textArea" />					
				</View>
				
				<View class="container" horizontalWrap="false">
					<Label class="label">Email:</Label>
					<TextArea id="email" class="textArea" />
				</View>
				
				<View class="container">
					<Label class="label">Password: </Label>
					<TextArea id="password" class="textArea" />
				</View>
				
				<View class="container">
					<Label class="label">Confirm: </Label>
					<TextArea id="confirm" class="textArea" />
				</View>
				
				<View class="container">
					<Label class="termsFont">By clicking the button below,</Label>
					<Label class="termsFont"> you agree to Sky'd's</Label>
					<Label class="link" right="1%" onClick="termsPage">Terms of Service</Label>
					<Label class="termsFont"> and </Label>
					<Label class="link" onClick="privacyPage">Privacy Page.</Label>
				</View>
				
				<View class="container">
					<Button id="signUp" class="button" onClick="createUser">
				</View>
			</View>
	</Window>
</Alloy>